# Maps Service Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_PASSWORD=secure_postgres_password_2024!
MAPS_DB_PASSWORD=tactical_maps_2024!

# Redis Configuration
REDIS_PASSWORD=redis_tactical_2024!

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# OpenMapTiles Configuration
OPENMAPTILES_URL=http://openmaptiles

# Network Configuration
TACTICAL_NETWORK=tactical-network

# Storage Configuration
MAPS_STORAGE_PATH=/mnt/secure_storage/maps

# Service URLs
LOCATION_SERVICE_URL=http://location-service:3001
PWA_SERVICE_URL=http://pwa-service:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/maps-service.log

# Performance Configuration
MEMORY_LIMIT=6GB
WORKER_THREADS=4
TILE_CACHE_SIZE=2GB

# Development Configuration (set to production for deployment)
NODE_ENV=development